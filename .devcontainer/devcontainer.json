	"postCreateCommand": "./.devcontainer/post-create.sh",
	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"njpwerner.autodocstring",
				"charliermarsh.ruff",
				"tamasfe.even-better-toml"
			]
		}
	}
